<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base app theme using black & white -->
    <style name="Theme.Fitnesstracker_app" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/BlackActionBar</item>
    </style>

    <!-- Custom action bar styling -->
    <style name="BlackActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/black</item>
        <item name="titleTextStyle">@style/WhiteActionBarText</item>
    </style>

    <style name="WhiteActionBarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
